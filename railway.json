{
    "$schema": "https://railway.com/railway.schema.json",
    "build": {
        "builder": "NIXPACKS",
        "buildCommand": "cd bot && pip install -r requirements.txt"
    },
    "deploy": {
        "startCommand": "cd bot && python main.py",
        "restartPolicyType": "ON_FAILURE",
        "restartPolicyMaxRetries": 3
    }
}