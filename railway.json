{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
        "builder": "NIXPACKS",
        "watchPatterns": [
            "bot/**"
        ]
    },
    "deploy": {
        "startCommand": "pip install -r bot/requirements.txt && python bot/main.py",
        "restartPolicyType": "ON_FAILURE"
    }
}